## --- .Rbuildignore ---
^\.github$
^\.git$
^\.gitignore$
^\.wordlist$
^\.Rhistory$
^CRAN-SUBMISSION$
^.*\.Rproj$
^README\.Rmd$
^cran-comments\.md$
^_pkgdown\.yml$
^pkgdown$
^docs$
^revdep$
^extras$

# Exclude website-only vignettes from CRAN tarball:
^vignettes/(lfast_validation|makeCorrLoadings_validate)\.Rmd$

# If those vignettes create auxiliary files/dirs, exclude them too:
^vignettes/(lfast_validation|makeCorrLoadings_validate)_files/
^vignettes/heavy_img/
^vignettes/data/
^\.Rproj\.user$
